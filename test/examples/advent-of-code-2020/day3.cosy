fn count_trees(slope_x Num, slope_y Num) Num {
    mut x = 0
    mut y = 0
    mut trees = 0
    for {
        x += slope_x
        y += slope_y
        if y >= input.length {
            break
        }
        var row = input.get(y)
        if x >= row.length {
            x -= row.length
        }
        if row.charAt(x) == '#' {
            trees += 1
        }
    }
    return trees
}

